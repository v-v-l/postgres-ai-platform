# PostgreSQL Configuration Template
# Copy this to .env and customize

POSTGRES_DB=postgres
POSTGRES_USER=postgres
# SECURITY: Generate a strong password! Use: openssl rand -base64 32
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
# Non-default port for security and conflict avoidance
POSTGRES_PORT=5433

# Network binding - use 127.0.0.1 for localhost only, 0.0.0.0 for all interfaces (DANGEROUS!)
POSTGRES_HOST=127.0.0.1

# Observability Stack Ports (non-default for security)
GRAFANA_PORT=3005
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
JAEGER_UI_PORT=16687
JAEGER_COLLECTOR_PORT=14251
PROMETHEUS_PORT=9091

# Connection URL for applications (update password above first!)
DATABASE_URL=postgresql://postgres:CHANGE_ME_TO_STRONG_PASSWORD@localhost:5433/postgres